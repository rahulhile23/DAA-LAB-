
//Array modification code
//add 1 to each element of array
#include<iostream>
using namespace std;

//add 1 to each element of array
void modify_arr(int *arr)
{
    for(int i=0; i<5; i++)
    {
        *(arr+i) += 1;
    }
   
}

int main()
{
    int arr[] = {1,2,3,4,5};
   
    cout<<"Before: ";
    for(int i:arr)
        cout<<i<<" ";

    cout<<endl;

    modify_arr(arr);

    cout<<"After: ";
    for(int i:arr)
        cout<<i<<" ";

    cout<<endl;

    return 0;
}

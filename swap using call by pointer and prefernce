#include <iostream>
using namespace std;

// Swap using references (call by reference)
void swap_ref(int &x, int &y) {
    int temp = x;
    x = y;
    y = temp;
}

// Swap using pointers (call by pointer)
void swap_ptr(int *x, int *y) {
    int temp = *x;
    *x = *y;
    *y = temp;
}

int sum(int x, int y) {
    return (x + y);
}

int main() {
    int x = 1, y = 2;

    cout << "Before swap (ref): " << x << " " << y << endl;
    swap_ref(x, y);
    cout << "After swap (ref): " << x << " " << y << endl;

    cout << "Sum: " << sum(x, y) << endl;

    // Now swap back using pointers
    cout << "Before swap (ptr): " << x << " " << y << endl;
    swap_ptr(&x, &y);
    cout << "After swap (ptr): " << x << " " << y << endl;

    return 0;
}
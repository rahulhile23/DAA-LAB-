#include <iostream>
using namespace std;

int main() {
    int arr[5] = {10, 2, 3, 4, 5};
    int *ptr = arr;

    cout << "Address of array : " << &arr << endl;
    cout << "Address of array through pointer : " << ptr << endl;
    cout << "Getting array[0] through pointer : " << *ptr << endl;
    cout << "Getting array[1] through pointer : " << *(ptr + 1) << endl;

    cout << "\nDisplaying array elements using pointer:" << endl;
    
    int count = 0;
    int* temp = ptr;  // Use temp pointer to iterate without modifying ptr
    while (count < 5) {
        cout << "Value at array[" << count << "] is " << *temp << endl;
        count++;
        temp++;  // Move to the next element
    }

    return 0;
}

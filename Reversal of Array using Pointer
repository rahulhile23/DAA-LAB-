Reversal of Array using Pointer :

#include <iostream>using namespace std;

int main() {
   
    int size = 5;
    int arr[size] = {10,20,30,40,50};
   
    int* ptr = arr;
   
    cout<<"Initial Array = [";
    for(int i = 0; i < size; i++){
        if(i == 4) //cout<<ptr[i];
        cout<<*(ptr+i);
        else cout<<ptr[i]<<",";
    }
    cout<<"]"<<endl;
   
    for(int i = 0; i < size/2; i++){
        int temp = ptr[i];
        ptr[i] = ptr[size-i-1];
        ptr[size-i-1] = temp;
    }
   
    cout<<"Final Array = [";
    for(int i = 0; i < size; i++){
        if(i == 4) cout<<ptr[i];
        else cout<<ptr[i]<<",";
    }
    cout<<"]"<<endl;
   
    return 0;
}